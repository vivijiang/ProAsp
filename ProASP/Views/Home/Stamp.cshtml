@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_fullLayout.cshtml";
}

<h2>IDP demo</h2>
<div class="row-fluid">
    <div class="span12 idp" id="idpko">
        <table class="table table-bordered table-striped idp-detail">
            <thead>
                <tr>
                    <th>Core Course</th>
                    <th colspan="5">TB 5</th>
                    <th colspan="5">TB 6</th>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody data-bind="foreach: planDetail">

                <tr>
                    <td data-bind="text: coursesCol.courseName"></td>
                    <!-- ko foreach: courses -->
                    <td>
                        <div class="stamp" data-bind="css: idpcss, click: $root.clickCell">
                            <img src="/Content/img/idp.png" />
                        </div>
                    </td>
                    <!-- /ko -->
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td></td>
                    <!-- ko foreach: planFooter -->
                    <td><span data-bind="text: monthText"></span></td>
                    <!-- /ko -->
                </tr>
            </tfoot>
        </table>
    </div>
</div>
